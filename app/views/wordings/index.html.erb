<h1>Resenhas</h1>

<hr class="soften">

<% @wordings.each do |wording| %>
<div id="wording">
   <div class="post well-custon">
      <div class="imagem">
        <img src="<%= wording.user.image %>" name="imagem" width="80" height="80" class="img-circle">
      </div>
      <div class="infos">
        <h3><%= link_to wording.title, wording%></h3>
        Em <%= wording.category.name %>
      </div>
      <div class="pull-right">
      <%= pluralize wording.reputation_for(:votes).to_i, "voto" %> |
      <%= link_to vote_wording_path(wording, type: "up"), method: "post" do %>
      <i class="fa fa-thumbs-o-up"></i>
      <% end %> |
      <%= link_to vote_wording_path(wording, type: "down"), method: "post" do %>
      <i class="fa fa-thumbs-o-down"></i>
      <% end %>
      </div>
  </div></br>
</div>
<% end %>